.nav
  = render partial: 'partials/navigation'
- @categories.each do |category|
  = link_to category.name, root_path(category: category.id)
.articlelist
  - @articles.each do |article|
    %div{id: dom_id(article)}
      #header
        %p= article.header
      #subheader
        %p= article.subheader
      #body
        %p= article.body
      #imageplaceholder
        = image_tag("trump.jpg")